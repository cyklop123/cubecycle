<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Cubetimer</title>
    <link rel="Stylesheet" href="css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
</head>
<body>

    <div class="jumbotron mb-1">
        <div class="container">
            <div class="row">

                <div class="d-none d-sm-block col-sm-4">
                    <img alt="cube-picture" src="img/cube.png" style="height:10em">
                </div>
                <div class="col-sm-8 align-self-center">
                    <h1>Cube Cycle</h1>
                </div>
    
            </div>
        </div>
    </div>
    
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <form class="form-inline my-2 my-lg-0 ml-auto">
                    <div class="form-group mr-3">
                        <b>Username: </b> <%= name %>
                    </div>
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log Out</button>
                </form>
            </div>
        </nav>

        <div class="row">
            <% for(var i=1; i<=7; i++){ %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card mt-2">
                    <div class="card-header">
                        Room name <%= i %>
                      </div>
                      <img class="card-img-top w-50 p-1 m-auto" src="img/3x3.png" alt="Card image cap">
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item">Type: 3x3</li>
                        <li class="list-group-item">Timeout: 30s</li>
                        <li class="list-group-item">Admin: jhon1</li>
                      </ul>
                      <div class="card-body">
                        <a href="room" class="btn btn-primary btn-block">Join</a>
                      </div>
                      <div class="card-footer text-muted">
                        <%= (Math.random()>0.5) ? 'Private' : 'Public' %>
                      </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <script src="js/bootstrap.min.js"></script>
</body>
</html>